<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ConfarmPassword">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:scaleX="1.5"
            android:scaleY="2"
            android:layout_height="@dimen/_140sdp"

            android:src="@drawable/raaklogo"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/_13sdp"
    android:layout_marginStart="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:text="@string/new_password"
    android:fontFamily="@font/droidkufi_bold"
    android:textColor="#007AFF"
    app:layout_constraintTop_toBottomOf="@id/logo"
    app:layout_constraintStart_toStartOf="parent"
    android:id="@+id/textone"/>

        <EditText
            android:id="@+id/newpassword"
            android:layout_width="match_parent"

            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/style_button"
            android:fontFamily="@font/droidkufi_bold"
            android:gravity="start|center"
            android:hint="@string/new_password"
            app:layout_constraintTop_toBottomOf="@id/textone"
            android:paddingStart="@dimen/_8sdp"
            android:textColor="#181D3D"
            android:textColorHint="#707070"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/conform_password"
    android:textColor="#007AFF"
    app:layout_constraintStart_toStartOf="parent"
    android:textSize="@dimen/_13sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_15sdp"
    app:layout_constraintTop_toBottomOf="@id/newpassword"
    android:fontFamily="@font/droidkufi_bold"
    android:id="@+id/texttwo"/>
        <EditText
            android:fontFamily="@font/droidkufi_bold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:paddingStart="@dimen/_8sdp"
            android:gravity="start|center"
            android:background="@drawable/style_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@id/texttwo"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:hint="@string/conform_password"
            android:textSize="@dimen/_15sdp"
            android:textColorHint="#707070"
            android:textColor="#181D3D"
            android:id="@+id/confarmpassword" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/Send"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"



            android:background="@drawable/itembuttonlogin"
            android:fontFamily="@font/droidkufi_bold"
            android:text="@string/send"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            app:backgroundTint="@null"

            app:backgroundTintMode="add"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confarmpassword" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:src="@drawable/logounder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>